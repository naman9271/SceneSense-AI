# Scene Sense - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# JWT Authentication Configuration
# =============================================================================
# Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# MongoDB Configuration
# =============================================================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# Example for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGO_URI=mongodb://localhost:27017/scene_sense
MONGO_DB_NAME=scene_sense
MONGO_COLLECTION_NAME=users

# =============================================================================
# Google Cloud Platform Configuration
# =============================================================================
# GCP project ID
GCP_PROJECT_ID=your-gcp-project-id

# GCP Storage bucket name
GCP_BUCKET_NAME=your-bucket-name

# Path to GCP service account credentials JSON file
# Example: /path/to/credentials/service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# =============================================================================
# Pinecone Vector Database Configuration
# =============================================================================
# Pinecone API key
PINECONE_API_KEY=your-pinecone-api-key

# Pinecone environment (e.g., us-west1-gcp, us-east-1-aws)
PINECONE_ENVIRONMENT=your-pinecone-environment

# Pinecone index name
PINECONE_INDEX_NAME=scene-sense-embeddings

# =============================================================================
# API Endpoints (for local development)
# =============================================================================
# User authentication endpoints
USER_AUTH_TOKEN_ENDPOINT=http://localhost:8000/user/token
USER_AUTH_LOGIN_ENDPOINT=http://localhost:8000/user/login
USER_AUTH_SIGNUP_ENDPOINT=http://localhost:8000/user/signup

# CLIP model endpoints
CLIP_SINGLE_IMAGE_EMBEDDING_ENDPOINT=http://localhost:8000/clip/single-image-embeddings
CLIP_MULTI_IMAGE_EMBEDDING_ENDPOINT=http://localhost:8000/clip/multi-image-embeddings
CLIP_TEXT_EMBEDDING_ENDPOINT=http://localhost:8000/clip/text-embeddings

# =============================================================================
# Application Configuration
# =============================================================================
# Environment mode (development, staging, production)
ENV=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
